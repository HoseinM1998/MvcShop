@model Cw17.Models.Entities.Product
@{
    Layout = "CustomLayout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-white">
                    <h2 class="text-center">Update Product</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                        <div class="form-group">
                            <label for="Name" class="font-weight-bold">Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Enter product name" />
                        </div>
                        <div class="form-group">
                            <label for="Title" class="font-weight-bold">Title</label>
                            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" placeholder="Enter product title" />
                        </div>
                        <div class="form-group">
                            <label for="Price" class="font-weight-bold">Price</label>
                            <input type="text" class="form-control" id="Price" name="Price" value="@Model.Price" placeholder="Enter product price" />
                        </div>
                        <div class="form-group">
                            <label for="CategoryId" class="font-weight-bold">Category ID</label>
                            <input type="text" class="form-control" id="CategoryId" name="CategoryId" value="@Model.CategoryId" placeholder="Enter category ID" />
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" class="btn btn-primary btn-lg" value="Update Product" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
