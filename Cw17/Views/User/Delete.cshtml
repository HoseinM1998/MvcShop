@model Cw17.Models.Entities.User

<h2>Delete User</h2>

<p>Are you sure you want to delete the user: <strong>@Model.FullName</strong>?</p>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("List")" class="btn btn-secondary">Cancel</a>
</form>